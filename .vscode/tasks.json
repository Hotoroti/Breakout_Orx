{
  "version": "2.0.0",
  "presentation": {
    "reveal": "always",
    "revealProblems": "onProblem"
  },
  "type": "shell",
  "linux": {
    "options": {
      "cwd": "build/linux/gmake/",
      "problemMatcher": {
        "base": "$gcc",
        "fileLocation": [
          "relative",
          "${workspaceFolder}/build/linux/gmake/"
        ]
      }
    }
  },
  "osx": {
    "options": {
      "cwd": "build/mac/gmake/",
      "problemMatcher": {
        "base": "$gcc",
        "fileLocation": [
          "relative",
          "${workspaceFolder}/build/mac/gmake/"
        ]
      }
    }
  },
  "windows": {
    "options": {
      "cwd": "build/windows/gmake/",
      "shell": {
        "executable": "cmd.exe",
        "args": [
          "/d",
          "/c"
        ]
      },
      "problemMatcher": {
        "base": "$gcc",
        "fileLocation": [
          "relative",
          "${workspaceFolder}/build/windows/gmake/"
        ]
      }
    }
  },
  "tasks": [
    {
      "label": "Refresh Orx project files",
      "group": "build",
      "type": "shell",
      "command": "./premake4",
      "windows": {
        "command": "premake4.exe gmake"
      },
      "options": {
        "cwd": "${workspaceFolder}/build/"
      }
    },
    {
      "label": "Build Orx (debug, profile, release, web)",
      "dependsOrder": "sequence",
      "dependsOn": [
        "Build Orx (debug)",
        "Build Orx (profile)",
        "Build Orx (release)",
        "Build Orx (web)"
      ],
      "problemMatcher": "$gcc"
    },
    {
      "label": "Build Orx (debug)",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "linux": {
        "command": "make -j config=debug64"
      },
      "osx": {
        "command": "make -j config=debuguniv64"
      },
      "windows": {
        "command": "mingw32-make.exe -j config=debug64"
      }
    },
    {
      "label": "Build Orx (profile)",
      "group": "build",
      "type": "shell",
      "linux": {
        "command": "make -j config=profile64"
      },
      "osx": {
        "command": "make -j config=profileuniv64"
      },
      "windows": {
        "command": "mingw32-make.exe -j config=profile64"
      }
    },
    {
      "label": "Build Orx (release)",
      "group": "build",
      "type": "shell",
      "linux": {
        "command": "make -j config=release64"
      },
      "osx": {
        "command": "make -j config=releaseuniv64"
      },
      "windows": {
        "command": "mingw32-make.exe -j config=release64"
      }
    },
    {
      "label": "Build Orx (web)",
      "dependsOn": [
        "Build Orx (release)"
      ],
      "group": "build",
      "type": "shell",
      "command": "emmake make -j config=releaseweb"
    },
    {
      "label": "Run Orx (debug)",
      "dependsOn": [
        "Build Orx (debug)"
      ],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "type": "process",
      "command": "Orxd",
      "windows": {
        "command": "Orxd.exe"
      },
      "options": {
        "cwd": "${workspaceFolder}/bin/"
      }
    },
    {
      "label": "Run Orx (profile)",
      "dependsOn": [
        "Build Orx (profile)"
      ],
      "group": {
        "kind": "test",
        "isDefault": false
      },
      "type": "process",
      "command": "Orxp",
      "windows": {
        "command": "Orxp.exe"
      },
      "options": {
        "cwd": "${workspaceFolder}/bin/"
      }
    },
    {
      "label": "Run Orx (release)",
      "dependsOn": [
        "Build Orx (release)"
      ],
      "group": {
        "kind": "test",
        "isDefault": false
      },
      "type": "process",
      "command": "Orx",
      "windows": {
        "command": "Orx.exe"
      },
      "options": {
        "cwd": "${workspaceFolder}/bin/"
      }
    },
    {
      "label": "Run Orx (web)",
      "dependsOn": [
        "Build Orx (web)"
      ],
      "group": {
        "kind": "test",
        "isDefault": false
      },
      "type": "shell",
      "command": "emrun index.html",
      "options": {
        "cwd": "${workspaceFolder}/bin/web/"
      }
    }
  ]
}
